<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
		<!-- Type Default -->
		<parameter key="rock.page_flow.template.default.class">Rock\OnSymfony\HttpPageFlowBundle\Type\DefaultType</parameter>
		<!-- Type Form -->
		<parameter key="rock.page_flow.template.form.new.class">Rock\OnSymfony\HttpPageFlowBundle\Type\FormNewType</parameter>
		<parameter key="rock.page_flow.template.form.edit.class">Rock\OnSymfony\HttpPageFlowBundle\Type\FormEditType</parameter>
		<!-- Type FormConfirm -->
		<parameter key="rock.page_flow.template.form.confirm.new.class">Rock\OnSymfony\HttpPageFlowBundle\Type\FormConfirmNewType</parameter>
		<parameter key="rock.page_flow.template.form.confirm.edit.class">Rock\OnSymfony\HttpPageFlowBundle\Type\FormConfirmEditType</parameter>
		<!-- Delete -->
		<parameter key="rock.page_flow.template.delete.class">Rock\OnSymfony\HttpPageFlowBundle\Type\DeleteType</parameter>
	</parameters>

    <services>
        <!-- Type Default -->
        <service 
			id="rock.page_flow.template.default" 
			class="%rock.page_flow.template.default.class%"
		>
		    <tag name="rock.page_flow.definition"/>
		</service>
        <!-- Type Form -->
        <service 
			id="rock.page_flow.template.form.new" 
			class="%rock.page_flow.template.form.new.class%"
		>
		    <tag name="rock.page_flow.definition"/>
		</service>
        <service 
			id="rock.page_flow.template.form.edit" 
			class="%rock.page_flow.template.form.edit.class%"
		>
		    <tag name="rock.page_flow.definition"/>
		</service>
        <!-- Type Form -->
        <service 
			id="rock.page_flow.template.form.confirm.new" 
			class="%rock.page_flow.template.form.confirm.new.class%"
		>
		    <tag name="rock.page_flow.definition"/>
		</service>
        <service 
			id="rock.page_flow.template.form.cofnirm.edit" 
			class="%rock.page_flow.template.form.confirm.edit.class%"
		>
		    <tag name="rock.page_flow.definition"/>
		</service>
        <service 
			id="rock.page_flow.template.delete"
			class="%rock.page_flow.template.delete.class%"
		>
		    <tag name="rock.page_flow.definition"/>
		</service>
	</services>
</container>
