<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
		<parameter key="rock.page_flow.event_dispatcher.class">Symfony\Bundle\FrameworkBundle\Debug\TraceableEventDispatcher</parameter>
		<!--
		<parameter key="rock.page_flow.event_dispatcher.class">Rock\OnSymfony\HttpPageFlowBundle\EventDispatcher\TraceableEventDispatcher</parameter>
		-->
		<!-- Default Delegators for Doctrine-->
		<parameter key="rock.definition.state_delegate.class">Rock\Component\Flow\Definition\DelegatorDefinition</parameter>
		<parameter key="delegator.form_save.test.attributes" type="collection">
			<parameter key="alias">TestFormSaveDelegator</parameter>
			<parameter key="class">Rock\OnSymfony\HttpPageFlowBundle\Tests\Delegate\TestFormSaveDelegator</parameter>
		</parameter>
		<parameter key="delegator.delete.test.attributes" type="collection">
			<parameter key="alias">TestDeleteDelegator</parameter>
			<parameter key="class">Rock\OnSymfony\HttpPageFlowBundle\Tests\Delegate\TestDeleteDelegator</parameter>
		</parameter>
	</parameters>

    <services>
        <service 
			id="rock.page_flow.event_dispatcher" 
			class="%rock.page_flow.event_dispatcher.class%"
			scope="prototype"
		>
            <tag name="monolog.logger" channel="event" />
            <argument type="service" id="service_container" />
            <argument type="service" id="logger" on-invalid="null" />
        </service>
		<!-- Demo Type -->
        <service 
			id="rock.page_flow.template.demo" 
			class="Rock\OnSymfony\HttpPageFlowBundle\Type\DemoType"
		>
		    <tag name="rock.page_flow.type"/>
		</service>

        <service 
			id="rock.page_flow.definition.delegator.form_save.test" 
			class="%rock.definition.state_delegate.class%"
		>
		    <argument>delegator.form_save.test</argument>
		    <argument>%delegator.form_save.test.attributes%</argument>
		    <tag name="rock.page_flow.definition"/>
		</service>
        <service 
			id="rock.page_flow.definition.delegator.delete.test" 
			class="%rock.definition.state_delegate.class%"
		>
		    <argument>delegator.delete.test</argument>
		    <argument>%delegator.delete.test.attributes%</argument>
		    <tag name="rock.page_flow.definition"/>
		</service>
    </services>
</container>
